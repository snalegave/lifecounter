<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/player1Title"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/player_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1LifeTot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="@string/playerOneLife"
        app:layout_constraintStart_toEndOf="@+id/player1Title"
        app:layout_constraintTop_toTopOf="@+id/player1Title" />

    <Button
        android:id="@+id/player1Button1"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Title" />

    <Button
        android:id="@+id/player1Button2"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="@string/minus"
        app:layout_constraintStart_toEndOf="@+id/player1Button1"
        app:layout_constraintTop_toTopOf="@+id/player1Button1" />

    <Button
        android:id="@+id/player1Button3"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="@string/plusFive"
        app:layout_constraintStart_toEndOf="@+id/player1Button2"
        app:layout_constraintTop_toTopOf="@+id/player1Button2" />

    <Button
        android:id="@+id/player1Button4"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="@string/minusFive"
        app:layout_constraintStart_toEndOf="@+id/player1Button3"
        app:layout_constraintTop_toTopOf="@+id/player1Button3" />

    <TextView
        android:id="@+id/player2Title"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
