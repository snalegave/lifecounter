<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/player1Title"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Player 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/player1Button4"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-5"
        app:layout_constraintStart_toEndOf="@+id/player1Button3"
        app:layout_constraintTop_toTopOf="@+id/player1Button3" />

    <Button
        android:id="@+id/player1Button3"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="+5"
        app:layout_constraintStart_toEndOf="@+id/player1Button2"
        app:layout_constraintTop_toTopOf="@+id/player1Button2" />

    <Button
        android:id="@+id/player1Button2"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/player1Button1"
        app:layout_constraintTop_toTopOf="@+id/player1Button1" />

    <Button
        android:id="@+id/player1Button1"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Title" />

    <TextView
        android:id="@+id/player2Title"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Button1" />

    <TextView
        android:id="@+id/player3Title"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2Button1" />

    <TextView
        android:id="@+id/player4Title"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player3Button1" />

    <Button
        android:id="@+id/player4Button4"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-5"
        app:layout_constraintStart_toEndOf="@+id/player4Button3"
        app:layout_constraintTop_toTopOf="@+id/player4Button3" />

    <Button
        android:id="@+id/player4Button1"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player4Title" />

    <Button
        android:id="@+id/player4Button2"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/player4Button1"
        app:layout_constraintTop_toTopOf="@+id/player4Button1" />

    <Button
        android:id="@+id/player4Button3"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="+5"
        app:layout_constraintStart_toEndOf="@+id/player4Button2"
        app:layout_constraintTop_toTopOf="@+id/player4Button2" />


    <TextView
        android:id="@+id/player3LifeTot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="Life  Total: %"
        app:layout_constraintStart_toEndOf="@+id/player3Title"
        app:layout_constraintTop_toTopOf="@+id/player3Title" />

    <Button
        android:id="@+id/player3Button4"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-5"
        app:layout_constraintStart_toEndOf="@+id/player3Button3"
        app:layout_constraintTop_toTopOf="@+id/player3Button3" />

    <Button
        android:id="@+id/player3Button1"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player3Title" />

    <Button
        android:id="@+id/player3Button2"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/player3Button1"
        app:layout_constraintTop_toTopOf="@+id/player3Button1" />

    <Button
        android:id="@+id/player3Button3"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="+5"
        app:layout_constraintStart_toEndOf="@+id/player3Button2"
        app:layout_constraintTop_toTopOf="@+id/player3Button2" />


    <TextView
        android:id="@+id/player2LifeTot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="Life  Total: %"
        app:layout_constraintStart_toEndOf="@+id/player2Title"
        app:layout_constraintTop_toTopOf="@+id/player2Title" />

    <Button
        android:id="@+id/player2Button4"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-5"
        app:layout_constraintStart_toEndOf="@+id/player2Button3"
        app:layout_constraintTop_toTopOf="@+id/player2Button3" />

    <Button
        android:id="@+id/player2Button1"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2Title" />

    <Button
        android:id="@+id/player2Button2"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/player2Button1"
        app:layout_constraintTop_toTopOf="@+id/player2Button1" />

    <Button
        android:id="@+id/player2Button3"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:text="+5"
        app:layout_constraintStart_toEndOf="@+id/player2Button2"
        app:layout_constraintTop_toTopOf="@+id/player2Button2" />


    <TextView
        android:id="@+id/player1LifeTot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="Life  Total: %"
        app:layout_constraintStart_toEndOf="@+id/player1Title"
        app:layout_constraintTop_toTopOf="@+id/player1Title" />


    <TextView
        android:id="@+id/player4LifeTot"
        android:layout_width="79dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="Life Total: %"
        app:layout_constraintStart_toEndOf="@+id/player4Title"
        app:layout_constraintTop_toTopOf="@+id/player4Title" />

</android.support.constraint.ConstraintLayout>